<h1><%= @passenger.name %></h1>

<section class='flights'>
  Flights:
  <ul>
    <% @passenger.flights.each do |flight| %>
      <li>Flight <%= link_to flight.number, "/flights/#{flight.id}" %></li>
    <% end %>
  </ul>
</section>

<%= form_tag "/flight_passengers?passenger_id=#{@passenger.id}", method: :post do %>
  <%= label_tag :flight_id, 'Flight Number' %>
  <%= number_field_tag :flight_id %>
  <%= submit_tag 'Assign Passenger to Flight' %>
<% end %>
